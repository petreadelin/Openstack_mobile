<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/card_height"
    app:cardBackgroundColor="@color/window_bg"
    android:elevation="100dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">
        <!--android:layout_alignBottom="@+id/url"-->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endpoint_icon"
        android:src="@drawable/ic_settings_applications_black_48dp"
        android:layout_gravity="center_vertical"
        android:padding="5dp" />
    </LinearLayout>

        <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_large_material"
            android:paddingLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />


    <TextView
        android:id="@+id/type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/type"
        android:textSize="@dimen/abc_text_size_small_material"
        android:paddingStart="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/linearLayout" />

     <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/region"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignEnd="@+id/type"
        android:layout_alignTop="@+id/type"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>


    <!--
     <TextView

          android:id="@+id/url"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:textColor="@android:color/white"
          android:text="url"
          android:textSize="@dimen/abc_text_size_menu_material"
          android:layout_below="@+id/region"
          android:layout_alignStart="@+id/name"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:paddingBottom="5dp"
          android:paddingLeft="5dp"/> -->

</RelativeLayout>
</androidx.cardview.widget.CardView>

